@inherits ForgotPasswordComponent

@page "/Account/ForgotPassword"

<PageTitle>Forgot your password?</PageTitle>

<h2>Forgot your password?</h2>
<h3>Enter your email.</h3>
<hr />
<div class="account">
    <section>
        <EditForm Model="Input" method="post" OnValidSubmit="OnValidSubmit" FormName="forgot-password">
            <DataAnnotationsValidator />
            <ValidationSummary role="alert" />
            <div class="input-group">
                <label for="Input.Email">Email</label>
                <InputText @bind-Value="Input.Email" id="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            </div>
            <div class="submit-group">
                <button type="submit">Reset password</button>
            </div>
        </EditForm>
    </section>
</div>

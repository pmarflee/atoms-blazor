@inherits ResendEmailConfirmationComponent

@page "/Account/ResendEmailConfirmation"

<PageTitle>Reset password</PageTitle>

<h2>Resend email confirmation</h2>
<h3>Enter your email.</h3>
<hr />

<div class="account">
    <section>
        <StatusMessage Message="@Message" />
        <EditForm Model="Input" method="post" OnValidSubmit="OnValidSubmit" FormName="resend-email-confirmation">
            <DataAnnotationsValidator />
            <ValidationSummary role="alert" />
            <FluentStack Orientation=@Orientation.Vertical VerticalGap=20>
                <div class="input-group">
                    <FluentTextField Name="Input.Email"
                                     TextFieldType=@TextFieldType.Email
                                     @bind-Value=@Input.Email
                                     Label="Email"
                                     Required
                                     Autofocus
                                     Placeholder="name@example.com"
                                     Maxlength=256
                                     AutoComplete="username"
                                     Style="width: 100%;" />
                </div>
                <div class="input-group center-align">
                    <button type="submit">Resend</button>
                </div>
            </FluentStack>
        </EditForm>
    </section>
</div>